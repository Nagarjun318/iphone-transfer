<Application x:Class="iPhoneTransfer.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             xmlns:converters="clr-namespace:iPhoneTransfer.UI.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Modern WPF UI theme -->
                <ui:ThemeResources />
                <ui:XamlControlsResources />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- WHY: Global converters for consistent UI -->
            <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
            <converters:ByteArrayToImageConverter x:Key="ByteArrayToImageConverter"/>
            <converters:InverseBooleanConverter x:Key="InverseBoolConverter"/>
            <converters:NullToVisibilityConverter x:Key="NullToVisConverter"/>
            <converters:EnumToVisibilityConverter x:Key="EnumToVisConverter"/>
            <converters:IsZeroConverter x:Key="IsZeroConverter"/>
            <converters:FileSizeConverter x:Key="FileSizeConverter"/>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
